<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/edit_top"/>

    <ImageView
        android:id="@+id/photoBook"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_weight="0.8"
        android:layout_below="@id/toolbar_top"
        android:layout_centerHorizontal="true"
        android:padding="40dp"
        android:src="@drawable/book"/>

    <ImageButton
        android:id="@+id/takePhotoBook"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="20dp"
        android:padding="30dp"
        android:src="@drawable/ic_add_a_photo_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp" />

    <ImageButton
        android:id="@+id/read_barcode"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/photoBook"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:src="@drawable/barcode_48"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:padding="10dp"
        android:layout_below="@+id/photoBook"
        android:layout_centerHorizontal="true"
        android:hint="@string/title"
        />

    <EditText
        android:id="@+id/author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:padding="10dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:hint="@string/author"

        />

    <EditText
        android:id="@+id/publisher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:padding="10dp"
        android:layout_below="@+id/author"
        android:layout_centerHorizontal="true"
        android:hint="@string/publisher"

        />

    <EditText
        android:id="@+id/editionYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:padding="10dp"
        android:layout_below="@+id/publisher"
        android:layout_centerHorizontal="true"
        android:hint="@string/editionYear"

        />

    <EditText
        android:id="@+id/bookCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:padding="10dp"
        android:layout_below="@+id/editionYear"
        android:layout_centerHorizontal="true"
        android:hint="@string/bookCondition"

        />


    <EditText
        android:id="@+id/isbn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:padding="10dp"
        android:layout_below="@+id/bookCondition"
        android:layout_centerHorizontal="true"
        android:hint="@string/isbn" />


    <ImageButton
        android:id="@+id/sendIsbn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/isbn"
        android:layout_below="@+id/bookCondition"
        android:src="@drawable/ic_send_black_24dp"
        />

    <EditText
        android:id="@+id/bookNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:padding="10dp"
        android:layout_below="@+id/isbn"
        android:layout_centerHorizontal="true"
        android:hint="@string/bookNote"

        />
</RelativeLayout>

</ScrollView>